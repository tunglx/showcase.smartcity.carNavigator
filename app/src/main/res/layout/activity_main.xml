<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:id="@+id/mapLayoutContainer">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.06"
        android:id="@+id/nextRoadLayout">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:background="@color/parking_color">

            <TextView
                android:id="@+id/nextRoad"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="100"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitXY"
                android:id="@+id/parkingSign"
                android:src="@drawable/parking"
                android:visibility="gone"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/parkingData"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="49"
                android:visibility="gone"
                />

        </LinearLayout>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.82"
        android:id="@+id/mainMapLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/innerMapLayout"
                android:layout_width="0dip"
                android:layout_weight="1.0"
                android:layout_height="fill_parent">
            <!-- Map Fragment embedded with the map object -->
                <fragment
                    android:name="com.here.android.mpa.mapping.AndroidXMapFragment"
                    android:id="@+id/mapfragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/oascDataLayout"
                android:layout_width="0dip"
                android:layout_weight="0.10"
                android:layout_height="fill_parent"
                android:background="@color/oasc_color"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Today"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="5dip"
                        android:background="@color/blue_title"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dip"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/forecastedWeatherType"
                            android:layout_width="30dip"
                            android:layout_height="30dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dip">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:layout_marginTop="2dip"
                            android:src="@drawable/thermometer"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/minTemperature"
                            android:background="@color/max_temp_color"
                            android:text=""
                            android:textStyle="bold"
                            android:layout_marginLeft="2dip"
                            android:padding="3dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:background="@color/red_maximum"
                            android:id="@+id/maxTemperature"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="3dip"
                            android:layout_marginLeft="2dip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="ÂºC"
                            android:textStyle="bold"
                            android:padding="1dip"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dip"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/forecastedHumidity"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:layout_marginTop="2dip"
                            android:src="@drawable/humidity"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/minHumidity"
                            android:background="@color/max_temp_color"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="3dip" />

                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:background="@color/red_maximum"
                        android:id="@+id/maxHumidity"
                        android:text=""
                        android:textStyle="bold"
                        android:padding="2dip"
                        android:layout_marginLeft="3dip"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="%"
                            android:textStyle="bold"
                            android:padding="1dip"
                           />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dip"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/forecastedPrecipitation"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/umbrella"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/pop"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="3dip" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_marginTop="8dip"
                        android:background="@color/blue_title"
                        android:text="Now" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/thermometer"
                            android:layout_marginTop="3dip" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/currentTemperature"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="3dip"/>

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/thunder"
                            android:layout_marginTop="3dip"
                            android:visibility="gone"
                            android:id="@+id/thunder_temperature" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dip">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/humidity"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/currentHumidity"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="3dip"/>

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/thunder"
                            android:layout_marginTop="3dip"
                            android:visibility="gone"
                            android:id="@+id/thunder_humidity"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dip"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/wind_speed"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/windSpeed"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="3dip"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip">

                        <ImageView
                            android:layout_width="25dip"
                            android:layout_height="25dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/wind_direction"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/windDirection"
                            android:text=""
                            android:textStyle="bold"
                            android:padding="2dip"
                            android:layout_marginLeft="5dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/airQualityGroup"
                        android:visibility="gone">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@color/blue_title"
                        android:layout_marginTop="8dip"
                        android:text="Air Quality" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/airQualityPollutants">
                    </LinearLayout>

                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginLeft="1dip"
                            android:layout_marginRight="1dip"
                            android:src="@drawable/thunder"
                            android:layout_marginTop="3dip"
                            android:visibility="gone"
                            android:id="@+id/thunder_air_quality"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.13"
        android:id="@+id/navigationLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/onRouteLayout">

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.06">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.14">

                <TextView
                    android:id="@+id/currentSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_blue"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.40">

                <TextView
                    android:id="@+id/currentRoad"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.20"
                android:background="@color/colorPrimaryDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.50">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/nextTurn" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.50">
                        <TextView
                            android:id="@+id/manouver"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.10"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/distance2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.10"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/eta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.13"
        android:id="@+id/routePlanningLayout"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            >

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.45">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/routeDestination"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="16sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.35">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimaryDark"
                    >
                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.30">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/distanceLabel"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Distance"
                            android:textSize="17sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.30">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/distanceInfo"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.20">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ETALabel"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:text="Arrival"
                            android:textSize="17sp"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.20">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/ETAInfo"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="19sp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.20">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Done"
                    style="@style/btnStyleShakespeare"
                    android:layout_margin="3dip"
                    android:onClick="startSimulation"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>